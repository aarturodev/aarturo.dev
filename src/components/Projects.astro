---
import { Image } from "astro:assets";
import Arrow from "./icons/Arrow.astro";
import GitHub from "./icons/GitHub.astro";

const PROJECTS = [
     {
          title: "anderson.dev",
          logo: "/public/Logo.svg",
          description: "✨ My personal website",
          link: "https://anderson-dev.vercel.app",
          gitHub: "https://github.com/aarturodev/aarturo.dev",
          tags: ["Astro", "Tailwind", "Typescript"],
     },
];
---

<section>
     <h3 class="text-xl py-4 font-medium">Proyectos</h3>
     <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          {
               PROJECTS.map((project) => (
                    <article class="flex flex-col justify-between border border-neutral-300 rounded-md p-4 h-full relative px-3 py-4 shadow-sm hover:bg-[#d4d4d432] transition-all hover:scale-100 hover:shadow-md dark:border-neutral-800 ">
                         {/* Encabezado */}
                         <header class="flex items-center justify-between p-2">
                              <a
                                   href={project.link}
                                   target="_blank"
                                   rel="noopener noreferrer"
                                   class="group flex items-center gap-[6px] font-medium decoration-neutral-500 hover:cursor-pointer"
                              >
                                   <div class="size-5">
                                        <Image
                                             src={project.logo}
                                             alt="toast"
                                             width={15}
                                             height={15}
                                             class="size-full"
                                             loading={"eager"}
                                        />
                                   </div>
                                   <span class="decoration-dotted underline-offset-[5px] hover:underline">
                                        {project.title}
                                   </span>
                                   <span class="opacity-50 duration-200 group-hover:translate-x-[1.5px] group-hover:opacity-100">
                                        <Arrow />
                                   </span>
                              </a>
                              <a
                                   aria-label="GitHub"
                                   href={project.gitHub}
                                   target="_blank"
                                   rel="noopener noreferrer"
                                   class="group flex items-center gap-[6px] font-medium decoration-neutral-500 decoration-dotted underline-offset-[5px] hover:cursor-pointer"
                              >
                                   <GitHub class="size-4" />
                              </a>
                         </header>

                         {/* Descripción */}
                         <p class="text-xs text-neutral-500 p-2 dark:text-neutral-300">
                              {project.description}
                         </p>

                         {/* Footer (Tags) */}
                         <footer class="flex items-center p-2 gap-2">
                              {project.tags.map((tag) => (
                                   <span class="inline-flex cursor-default items-center space-x-2 rounded-md border border-neutral-300 bg-neutral-200/50 px-2 py-1 font-mono text-xs font-medium text-neutral-700 dark:border-neutral-800 dark:bg-neutral-800/60 dark:text-neutral-300">
                                        {tag}
                                   </span>
                              ))}
                         </footer>
                    </article>
               ))
          }
     </div>
</section>
